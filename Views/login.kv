#:kivy 2.1
Screen:
    
    MDCard:
        size_hint: None, None
        size: 600, 800
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "Connectez-vous !"
            font_size: 50
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 10

        MDTextFieldRound:
            id: user
            hint_text: "Adresse e-mail"
            icon_right: "account"
            size_hint_x: None
            width: 400
            font_size: 24
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "Mot de passe"
            icon_right: "eye-off"
            size_hint_x: None
            width: 400
            font_size: 24
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Se Connecter"
            font_size: 24
            pos_hint: {"center_x": 0.5}
            on_press: app.logger()

        MDRoundFlatButton:
            text: "Effacer"
            font_size: 24
            pos_hint: {"center_x": 0.5} 
            on_press: app.clear()           

        Widget:
            size_hint_y: None
            height: 10